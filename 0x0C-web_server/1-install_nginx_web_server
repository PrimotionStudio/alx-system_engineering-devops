#!/usr/bin/env bash
# Bash script that configures a new
# Ubuntu machine to respect above requirements
# this script will be run on the server itself)

sudo apt-get -y install

printf "server {\n\tlisten 80;\n\tlisten [::]:80;\n\troot /var/www/html;\n\tindex index.html index.htm index.nginx-debian.html;\n\tserver_name _;\n\tlocation / {\n\ttry_files $uri $uri/ =404;\n\techo "Hello World!";\n\t}\n}" > /etc/nginx/sites-available/default

/etc/init.d/nginx restart
